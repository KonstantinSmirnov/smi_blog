<div id="blog-post">
  <div class="row">
    <div class="col-md-9">
      <div class="row">
        <div class="col-lg-6">
          <% @articles.select.with_index{|_,i| (i+1) % 2 != 0}.each do |article| %>
            <%= render :partial => 'shared/blog_post', :locals => { :object => article } %>
          <% end %>
        </div>
        <div class="col-lg-6">
          <% @articles.select.with_index{|_,i| (i+1) % 2 == 0}.each do |article| %>
            <%= render :partial => 'shared/blog_post', :locals => { :object => article } %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <%= render :partial => 'shared/categories' %>
      <%= render :partial => 'shared/subscribe' %>
      <%= render :partial => 'shared/aboutme' %>
    </div>
  </div>
</div>