<!DOCTYPE html>
<html>
  <head>
    <title>SmiPlay | <%= yield(:title) %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://use.fontawesome.com/f2f87b72d2.js"></script>
    <meta name='description' content='<%= yield_meta_tag(:description, @default_description) %>' />
    <meta name='keywords' content='<%= yield_meta_tag(:keywords, @default_keywords) %>' />
  </head>

  <body>
    <div class="wrapper">
      <div class="container blog-container">
        <%= render :partial => 'shared/header' %>
        <%= yield %>
      </div>
      <%= render :partial => 'shared/footer' %>
    </div>
    <%= debug(params) if Rails.env.development? %>
  </body>

</html>
