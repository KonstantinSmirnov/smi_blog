<h5>Image</h5>
<div class="form-group">
  <%= image_tag f.object.image.thumb('300x200#').url if f.object.image_stored? %>
  <%= f.file_field :image if !f.object.persisted? %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :primary_image %>
  <%= f.check_box :primary_image %>
</div>
<div class="form-group">
  <%= URI(request.url) + Dragonfly.app.remote_url_for(f.object.image_uid) if f.object.persisted? %>
</div>
<% if f.object.persisted? %>
  <div class="form-group">
    <%= f.check_box :_destroy %>
    <%= f.label :_destroy, "Remove image" %>
  </div>
<% end %>
<hr>
