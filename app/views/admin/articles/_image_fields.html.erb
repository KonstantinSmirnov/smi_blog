<h5>Image</h5>
<div class="form-group">
  <%= image_tag f.object.image(:preview) %>
  <%= f.file_field :image %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :url %><br>
  <%= URI(request.url) + f.object.image(:original) %><br>
</div>
<% if f.object.persisted? %>
  <div class="form-group">
    <%= f.check_box :_destroy %>
    <%= f.label :_destroy, "Remove Service" %>
  </div>
<% end %>
<hr>
