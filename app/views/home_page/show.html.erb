<% provide(:title, "Home") %>

<% if @home_page %>
  <section class="sec-main text-xs-center">
    <%= image_tag @home_page.title_backgroung.url(:original), class: 'background-img' %>
    <h1 class="main-heading"><%= @home_page.title %></h1>
  </section>
  <br>
  <section class="sec-about">
    <div class="container text-xs-center">
      <h1><%= @home_page.about_title %></h1>
      <div class="row">
        <div class="col-sm-8 offset-sm-2">
          <%= markdown(@home_page.about_content) %>
        </div>
      </div>
      <hr />
    </div>
    <br>
  </section>
  <section id="services" class="sec-services">
    <div class="container text-xs-center">
      <h1><%= @home_page.services_title %></h1>
      
      <% if @home_page.services.any? %>
        <div class="row">
          <% @home_page.services.each do |service| %>
            <%= render :partial => 'service', :locals => { :object => service } %>
          <% end %>
        </div>
      <% else %>
        <h5>There are no services yet. Please add one.</h5>
      <% end %>
      <hr />

    </div>
  </section>
  <section class="sec-folio">
    <div class="container text-xs-center">
      <h1><%= @home_page.projects_title %></h1>
      <% if @home_page.projects.any? %>
        <div class="row">
          <% @home_page.projects.each do |project| %>
              <%= render :partial => 'project', :locals => { :object => project } %>
          <% end %>
        </div>
      <% else %>
        <h5>There are no projects yet. Please add one.</h5>
      <% end %>
    </div>
  </section>
<% else %>
  <h1>Home page is not set up. Please create one.</h1>
<% end %>
