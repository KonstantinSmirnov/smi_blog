<div class="row">
  <div class="col-md-9 col-lg-10">
    <div class="row">
      <div class="col-lg-12">
        <h5>Articles by category: <%= @category.name %></h5>
        <hr>
      </div>
      <div class="col-lg-6">
        <% @articles.select.with_index{|_,i| (i+1) % 2 != 0}.each do |article| %>
          <%= render :partial => 'articles/blog_article', :locals => { :object => article } %>
        <% end %>
      </div>
      <div class="col-lg-6">
        <% @articles.select.with_index{|_,i| (i+1) % 2 == 0}.each do |article| %>
          <%= render :partial => 'articles/blog_article', :locals => { :object => article } %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-3 col-lg-2">
    <%= render :partial => 'shared/categories' %>
    <%= render :partial => 'shared/subscribe' %>
  </div>
</div>
