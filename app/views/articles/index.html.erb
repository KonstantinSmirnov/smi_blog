<% provide(:title, "Blog") %>
<div class="row">
  <div class="col-md-9 col-lg-10">
    <div class="row">
      <% if @articles.empty? %>
        <div class="col-lg-12">
          <p>There are no articles yet.</p>
        </div>
      <% else %>
        <div class="col-lg-6">
          <% @articles.select.with_index{|_,i| (i+1) % 2 != 0}.each do |article| %>
            <%= render :partial => 'articles/blog_article', :locals => { :object => article } %>
            <% end %>
          </div>
        <div class="col-lg-6">
          <% @articles.select.with_index{|_,i| (i+1) % 2 == 0}.each do |article| %>
            <%= render :partial => 'articles/blog_article', :locals => { :object => article } %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="text-xs-center">
      <%= will_paginate @articles, :previous_label => '<', :next_label => '>' %>
    </div>
  </div>
  <div class="col-md-3 col-lg-2">
    <%= render :partial => 'categories/categories_widget' %>
    <%= render :partial => 'shared/subscribe' %>
  </div>
</div>
