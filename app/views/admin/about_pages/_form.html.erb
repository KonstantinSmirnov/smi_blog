<%= form_for [:admin, @about_page], url: admin_about_page_path do |f| %>
  <%= f.submit "Save", class: 'btn btn-primary btn-sm' %>
  <br><br>
  <% if @about_page.errors.any? %>
    <div class="alert alert-danger">
      <h5 class="alert-heading"><%= pluralize(@about_page.errors.count, "error") %> prohibited this item from being saved:</h5>
      <ul>
        <% @about_page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= image_tag @about_page.image.thumb('300x200#').url if @about_page.image_stored? %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image%>
  </div>
  <div class="form-group">
    <%= f.label :content, "Content (MD)" %><br>
    <%= f.text_area :content, rows:10, class: 'form-control', :autocomplete => 'off' %>
  </div>

<% end %>
