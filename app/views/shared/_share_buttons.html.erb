<div class="share-buttons-list">
  <span class="share-button" onclick='share_facebook(
          "<%= "#{article_url(object)}" %>",
          "<%= "#{object.title}" %>",
          "<%= "#{object.description}" %>",
          "<%= "#{URI(request.base_url)}#{object.images.primary_images.first.image(:preview)}" if object.images.primary_images.any? %>",
          "<%= "SMIPLAY.COM" %>"
        )'><i class="fa fa-facebook-f"></i></span>
</div>
