<%= form_for [:admin, @home_page] do |f| %>
  <%= f.submit "Save", class: 'btn btn-primary btn-sm' %>
  <br><br>
  <% if @home_page.errors.any? %>
    <div class="alert alert-danger">
      <h5 class="alert-heading"><%= pluralize(@home_page.errors.count, "error") %> prohibited this item from being saved:</h5>
      <ul>
        <% @home_page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= image_tag(@home_page.title_background.url(:preview)) if @home_page.title_background %>
  </div>
  <div class="form-group">
    <%= f.label :title_background %>
    <%= f.file_field :title_background%>
  </div>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, rows:10, class: 'form-control', :autocomplete => 'off' %>
  </div>

<% end %>
