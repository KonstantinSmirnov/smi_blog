<% provide(:title, @category["name"]) %>
<div class="row">
  <div class="col-md-8 col-lg-9">
    <div class="row">
      <div class="col-lg-12">
        <h5>Articles by category: <%= @category["name"] %></h5>
        <br>
        <% if @articles.empty? %>
          <p>There are no articles in this category yet.</p>
        <% end %>
      </div>
      <% if !@articles.empty? %>
        <div class="col-lg-6">
          <% @articles.select.with_index{|_,i| (i+1) % 2 != 0}.each do |article| %>
            <%= render :partial => 'blog/articles/blog_article', :locals => { :object => article } %>
          <% end %>
        </div>
        <div class="col-lg-6">
          <% @articles.select.with_index{|_,i| (i+1) % 2 == 0}.each do |article| %>
            <%= render :partial => 'blog/articles/blog_article', :locals => { :object => article } %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="text-xs-center">
      <%= will_paginate @articles, :previous_label => '<', :next_label => '>' %>
    </div>
  </div>
  <div class="col-md-4 col-lg-3">
    <%= render :partial => 'blog/categories/categories_widget' %>
    <%= render :partial => 'shared/subscribe' %>
  </div>
</div>
