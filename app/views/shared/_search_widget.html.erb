<div class="card">
  <div class="card-block">
    <%= form_tag("/search", method: "get") do %>
        <div class="form-group">
            <%= text_field_tag :search_query, params[:search_query], class: 'form-control', placeholder: 'Enter a phrase...', :autocomplete => 'off' %>
        </div>
        <%= submit_tag "Search", class: 'btn btn-outline-primary' %>
    <% end %>
  </div>
</div>
