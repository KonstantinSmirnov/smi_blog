<nav class="navbar <%= should_be_white? ? 'navbar-white-border' : 'navbar-dark-border' %>">
  <div class="blog-logo">
    <%= link_to "#{@common_settings.nil? ? 'Title' : @common_settings["website_title"] }", root_path, class: "navbar-brand #{'text-white' if controller?('home_page')}" %>
  </div>
  <div class="blog-social-buttons hidden-sm-down">
    <%= render :partial => 'shared/social_icons' %>
  </div>
  <div class="blog-links">
    <div>
      <ul class="nav navbar-nav float-xs-right">
        <li class="nav-item <%= 'active' if controller?("home_page") %>">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item <%= 'active' if controller?("blog/articles") %>">
          <%= link_to "Blog", articles_path, :class => "nav-link #{'text-white' if should_be_white?}" %>
        </li>
        <li class="nav-item <%= 'active' if controller?("about_page") %>">
          <%= link_to "About", about_page_path, :class => "nav-link #{'text-white' if should_be_white?}" %>
        </li>
        <% if admin_signed_in? %>
          <li class="nav-item <%= 'active' if namespace?("admin") %>">
            <%= link_to "Admin", admin_dashboard_path, :class => "nav-link #{'text-white' if should_be_white?}" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign out", destroy_admin_session_path, { data: { confirm: 'Are you sure to sign out?' }, :class => "nav-link #{'text-white' if should_be_white?}" } %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
